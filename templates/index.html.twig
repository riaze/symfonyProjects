{% extends 'base.html.twig' %}

{% block title %}Liste de mes projets{% endblock %}

{% block main %}
    <main class="container">
        <h1>Index qui provient de la vue TWIG</h1>

        <div class="card-group row">
            {% for projet in projects %}
                <div class="card col-4" style="width: 18rem;">
                    <img class="card-img-top" src="{{asset('uploaded/project/' ~ projet.image)}}" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{ projet.name }}</h5>
                        <p class="card-text">{{ projet.description | slice(0,100) }}...</p>

                        <p class="card-text"><a href="{{ projet.url }}">{{ projet.url }}</a></p>
                        <a href="{{ path('app_project_show',{slug:projet.slug})}}" class="btn btn-primary">Voir le projet</a>
                        <a href="{{ path('app_project_update',{slug:projet.slug})}}" class="btn btn-primary">Modifier</a>
                        </br><a href="{{ path('app_project_delete',{slug:projet.slug})}}" class="btn btn-danger">supperimer</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </main>
{% endblock %}